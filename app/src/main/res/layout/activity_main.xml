<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    android:background="@drawable/fon"
        tools:context=".MainActivity">

    <TextView
        android:fontFamily="cursive"
        android:text="My Guessing Game"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="50dp"
            app:layout_constraintTop_toTopOf="parent"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>
    <TextView
            android:fontFamily="cursive"
            android:text="Enter a number between 1 and 100:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblRange"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
    />
    <EditText
            android:fontFamily="cursive"
            android:gravity="center_horizontal"
            android:id="@+id/txtGuess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberSigned"
            android:ems="2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/lblRange"
            android:singleLine="true"
            android:textAppearance="@android:style/TextAppearance.Material.Medium.Inverse"/>
    <Button
            android:fontFamily="cursive"
            android:text="Guess!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnGuess"
            android:layout_marginTop="35dp"
            app:layout_constraintTop_toBottomOf="@+id/txtGuess"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"/>
    <TextView
            android:fontFamily="cursive"
            android:textSize="32sp"
            android:textColor="#134100"
            android:id="@+id/lblOutput"
            android:gravity="center_horizontal"
            android:text="Enter a number, then click Guess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/btnGuess"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>